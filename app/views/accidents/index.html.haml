-#  This file is app/views/accidents/index.html.haml
-#.header
  =render :partial => 'header_form'
           
  
.container-fluid 
  %h4 Policy: Accidents, Policyholder: #{@policyholder.name}
  .accident-table 
    %table#table_id.display
      %thead
        %tr
          %th Id
          %th Name
          %th Address
          %th Date of Birth
          %th Gender
          %th Action
          -#%th Updated At
      
      %tbody
        - @all_accidents.each do |accident|
          -#- policyholder = Policyholder.where(:id => policy.policyholder_id).first
          %tr
            %td= accident.id
            %td= accident.name
            %td= accident.address
            %td= accident.dateofbirth
            %td= accident.gender
            %td= link_to "Edit Policy", edit_accident_path(accident)
            -#%td= policy.updated_at
            %td= link_to "Show Policy", accident_path(accident)
            -#%td= link_to "Edit Policy", edit_policy_path(policy)
            -#%td= link_to "Destroy Policy", policy_path(policy), :confirm => 'Are you sure?', :method => :delete
         
  
 
%p= link_to "Back to policies", policies_path
