= form_for @policyholder do |f|
  - if @policyholder.errors.any?
    .error_messages
      %h2
        = pluralize(@policyholder.errors.count, "error")
        prohibited this policyholder from being saved:
      %ul
        - @policyholder.errors.full_messages.each do |msg|
          %li= msg
  .field
    -#= f.label :policytype
    = f.text_field :name
    
  = f.fields_for :policies do |builder|
    = render 'policy_fields', f: builder
  
  %br
  .actions
    = f.submit

