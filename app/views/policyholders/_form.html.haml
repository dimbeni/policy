-# in _form.html.haml (the partial)

= simple_form_for @policyholder do |f|
  - if @policyholder.errors.any?
    .error_messages
      %h2
        = pluralize(@policyholder.errors.count, "error")
        prohibited this @policyholder from being saved:
      %ul
        - @policyholder.errors.full_messages.each do |msg|
          %li= msg
         
  -#%legend
  %h4.title  
    -#= controller.action_name.capitalize 
    - if controller.action_name == "new"
      = t(".action_new")
      = t(".title") 
    - else
      = t(".action_edit")
      = t(".title") 
          
  .row
    .col-sm-8       
      -#= f.input :name, :label => 'Full Name'
      = f.input :name, :label => t(".name")
  .row
    .col-sm-8    
      = f.input :address, :label => t(".address")
  .row
    .col-sm-8
      = f.input :vatnumber, :label => t(".fiscal_code")
  .row
    .col-sm-8    
      = f.input :user_id, as: :hidden, :input_html => { :value => current_user.id } 
  .form-group-1
    = f.submit t("defaults.submit"), :class => 'btn btn-primary btn-sm'    

