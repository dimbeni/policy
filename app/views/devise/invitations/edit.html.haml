-# devise/invitations/edit.html.haml

.container
  %h4.title_without_border= t 'devise.invitations.edit.header' 
  = simple_form_for resource, :as => resource_name, :url => invitation_path(resource_name), :html => { :method => :put } do |f| 
    = devise_error_messages! 
    = f.hidden_field :invitation_token 
    .row
      .col-sm-5
        = f.input :password 
    .row
      .col-sm-5    
        = f.input :password_confirmation 
    .row
      .col-sm-5    
        = f.submit t("devise.invitations.edit.submit_button"), class: "btn btn-primary btn-sm"  

